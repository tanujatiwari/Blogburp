<%- include("../partials/header") %>

<div class="d-flex justify-content-center">
	<form action="/proses" method="POST" class="form py-3">
		<h1 class="mb-4">Add Prose</h1>
		<div class="form-group">
			<label><b>Title</b></label>
			<input type="text" name="prose[title]" class="form-control" required>
		</div>
		<div class="form-group">
			<label><b>Description</b></label>
			<input type="text" name="prose[desc]" class="form-control" required>
		</div>
		<div class="form-group">
			<label><b>Body</b></label>
			<textarea class="form-control textarea" name="prose[body]" required></textarea>
		</div>
		<div>
			<button type="submit" class="btn btn-dark">Submit</button>
			<a href="/proses" class="btn btn-dark">Back to proses</a>
		</div>
	</form>
</div>
<hr>

