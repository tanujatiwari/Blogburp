<%- include("../../partials/header") %>

<div class="d-flex justify-content-center">
	<form action="/proses/<%= prose._id %>/comments" method="POST" class="form py-3">
		<h5 class="mb-4 text-left">Leave a comment</h5>
		<div class="form-group">
			<textarea class="form-control poetry-textarea" name="comment[text]" required></textarea>
		</div>
		<div>
			<button type="submit" class="btn btn-dark">Submit</button>
			<a href="/proses/<%=prose._id%>" class="btn btn-dark">Back to prose</a>
		</div>
	</form>
</div>

