<%- include("../partials/header") %>

<div class=" container my-5 poetry-container">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title mt-4"><%=poetry.title%></h4>
			<h2 class="mt-4"><em><%=poetry.quote%></em></h2>
			<p class="card-text mt-4 mb-5"><%-poetry.poem%></p>
			<% if(currentUser && poetry.author.id.equals(currentUser._id)){ %>
				<div class="mt-5">
					<a href="/poetry/<%=poetry._id%>/edit" class="btn hover-button">Edit</a>
					<form action="/poetry/<%=poetry._id%>?_method=DELETE" method="POST" style="display : inline;">
						<button class="btn hover-button">Delete</button>
					</form>
				</div>
			<% } %>
		</div>
	</div>
	<hr>
	<div class="mt-5">
		<a class="btn btn-dark btn-sm btn-md-lg pull-right" href="/poetry/<%=poetry._id%>/comments/new">Add a review</a>
	</div>

	<div class="container mt-5">
		<div class="ui comments">
			<h3 class="ui dividing header">Reviews</h3>
			<% if(poetry.comments.length===0){ %>
				<h6>
					<em>No reviews yet...Be the first one to add a comment!</em>
				</h6>
			<% } else { %>
			<% poetry.comments.forEach(function(comment){ %>
			<div class="comment my-3">
				<span class="avatar"><img src="https://img.icons8.com/doodle/48/000000/user-male--v1.png" style="filter:none;"/></span>
				<div class="content">
					<span class="author"><%=comment.author.username%></span>
					<div class="text"><%=comment.text%></div>
					<% if(currentUser && (comment.author.id.equals(currentUser._id) || currentUser.username===process.env.ADMIN)){ %>
						<button class="btn btn-light">
							<a class="reply" href="<%=poetry._id%>/comments/<%=comment._id%>/edit">Edit</a>
						</button>
						<form action="/poetry/<%=poetry._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" style="display:inline;">
							<button class="btn btn-light">Delete</button>
						</form>
					<%}%>
				</div>
			</div>
			<% }); } %>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>